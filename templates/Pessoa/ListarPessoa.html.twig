{% extends "base.html.twig" %}

{% block title %}Lista de Pessoas
{% endblock %}

{% block body %}
	<h1>
		Ol√°
	</h1>

    <form id='form' >
        <div class='container'>
                <table class="table table-striped table-bordered table-sm" id='table'>

                <thead>
                        <tr>
                                <th>Nome</th>
                                <th>CPF</th>
                                <th>Data de Nascimento</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>Logradouro</th>
                                <th>Cidade</th>
                                <th>Estado</th>
                                <th>Editar</th>
                                <th>Excluir</th>
                        </tr>
                </thead>

                {% for pessoa in pessoas %}
                <tr> 
                                <td> {{pessoa.Nome}}   </td> 
                                <td>  {{pessoa.Cpf}}  </td> 
                                <td>  {{pessoa.DataNascimento.format("d-m-Y")}}  </td> 
                                <td>  {{pessoa.Email}}  </td> 
                                <td>  {{pessoa.Telefone}}  </td> 
                                <td>  {{pessoa.Logradouro}}  </td> 
                                <td>  {{pessoa.Estado}}  </td> 
                                <td>  {{pessoa.Cidade}}  </td> 
                                <td>  
                                        <button type="button" class="btn btn-warning">
                                                <span class="glyphicon glyphicon-open-file" aria-hidden="true"></span>
                                        </button> 
                                </td> 
                                <td>  
                                        <button type="button" onclick="DeletarPessoa({{pessoa.Id}})" class="btn btn-danger">
                                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </button> 
                                </td> 
                </tr>
                {% endfor %}

                </table>
        </div>
    </form>
    
    {% endblock %}
    {% block javascript %}

    {{ parent() }}

  <script type="text/javascript">

        function DeletarPessoa(id){

                $.ajax({  
                    type: "POST",  
                    url: '/Delete/'+id,
                    success: function(response)
                    {
                        console.log(response);
                    }
                });
        }

  </script>

  {% endblock %}